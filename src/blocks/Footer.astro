---
import {Icon} from "astro-icon/components"
import SocialLinks from "@/components/SocialLinks.tsx" 
import site from "@/data/site.ts"
const date = new Date().getFullYear()
---

<footer>
  <div class="mx-auto max-w-7xl px-6 py-12 sm:flex sm:items-center sm:justify-between">
    <div class="flex justify-center space-x-6 mb-4 md:order-2">
      <SocialLinks client:load />
    </div>
    <div class="md:order-1 md:mt-0">
      <p class="text-center text-sm leading-5 text-gray-500">&copy; {date} {site.brand}. All rights reserved.</p>
    </div>
  </div>
</footer>
